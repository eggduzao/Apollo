{
  "includes": [
    "**/*.{md,toml,json}"
  ],
  "markdown": {
    "lineWidth": 100,
    "textWrap": "always"
  },
  "excludes": [
    ".venv/",
    "**/target/",
    "crates/apollo-plan/dsl-schema-hashes.json",
    "py-apollo/.hypothesis/",
    "py-apollo/.mypy_cache/",
    "py-apollo/.pytest_cache/",
    "py-apollo/.ruff_cache/",
    "py-apollo/tests/unit/io/files/"
  ],
  "plugins": [
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.1.wasm",
    "https://plugins.dprint.dev/toml-0.6.2.wasm"
  ]
}
